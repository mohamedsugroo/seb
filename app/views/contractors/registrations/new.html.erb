<div class="container pageRegisterone">
<h2>Sign up</h2>



<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="personal_info">
    <div class="row">
      <div class="col">
          

    <div class="row">
      <div class="col">
        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="col">
        <div class="field">
          <%= f.label :last_name %><br />
          <%= f.phone_field :last_name, autofocus: true, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <div class="field">
          <%= f.label :dob %><br />
          <%= f.date_field :dob, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="col">
       
        <div class="field">
          <%= f.label :gender %><br />
          <%#= f.email_field :gender, autofocus: true, class: 'form-control' %>
          <%= f.select( :gender,
                      [ 'Male', 'Female'],
                      {class: 'form-control form-control-lg'})
           %>

        </div>

      </div>
    </div>


    <div class="field">
      <%= f.label :mobile %><br />
      <%= f.number_field :mobile, autofocus: true, class: 'form-control' %>
    </div>

    <div class="row">
      <div class="col">
        <div class="field">
          <%= f.label :preferred_hourly_rate %><br />
          <%= f.number_field :preferred_hourly_rate, autofocus: true, class: 'form-control' %>
        </div>
      </div>
      <div class="col">

        <div class="field">
          <%= f.label :right_to_work_uk %><br />
          <%#= f.email_field :right_to_work_uk, autofocus: true, class: 'form-control' %>
          <%= f.select :right_to_work_uk,
            [
              'Yes',
              'No'
            ], class: 'form-control'
           %>
        </div>
        
      </div>
    </div>

    <div class="field">
      <%= f.label :utr %><br />
      <%= f.email_field :utr, autofocus: true, class: 'form-control' %>
    </div>

    <br>

    <label class="btn btn-primary btn-lg" id="contine_to_address">
      Next Step
    </label>

    </div>

    <div class="col">
      personal info display notice here
    </div>
    </div>
    
  </div><!-- end personal info -->

  <!-- start page 2 -->

  <div class="contractor_address ">

    <div class="row">
      <div class="col">
        <div class="field">
          <%= f.label :firstline_address %><br />
          <%= f.email_field :firstline_address, autofocus: true, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :postcode %><br />
          <%= f.email_field :postcode, autofocus: true, class: 'form-control' %>
        </div>

        <div class="row">
          <div class="col">
            <div class="field">
              <%= f.label :city %><br />
              <%= f.email_field :city, autofocus: true, class: 'form-control' %>
            </div>
          </div>
          <div class="col">
            <div class="field">
              <%= f.label :country %><br />
              <%= f.email_field :country, autofocus: true, class: 'form-control'%>
            </div>
          </div>
        </div>

        

        
        <br>
        <label class="btn btn-primary btn-lg" id="contine_to_complete">
          Next Step
        </label>

      </div>
      <div class="col">
        address related information display here
      </div>
    </div>
    
  </div>



  <div class="complete_sign_in_info ">
    <div class="row">
      <div class="col">

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>


        <br>

        <div class="actions">
          <%= f.submit "Complete Sign up", class: 'btn btn-primary btn-lg' %>
        </div>
        
      </div>
      <div class="col">
        Complete sign up info
      </div>
    </div>
  </div>

  

<% end %>

<%= render "devise/shared/links" %>


</div>