<div class="container">

  <div class="d-flex align-items-center p-3 text-white-50 bg-purple rounded box-shadow purple page-badge">

    <div class="logo">
    </div>

    <div class="lh-100">
      <h6 class="mb-0 text-white lh-100">Company Approvals</h6>
      <small>From <%= time_ago_in_words(Time.now) %></small>
    </div>
  </div>

  <table class="table table-hover">
    <tbody>
      <% @companies.each do |company| %>
      <tr>
        <td>
          <%= company.email %> 
        </td>
        <td>

          <div class="row">
            <div class="col">
              <% if !company.aprovals %>

              <span class="badge-Pending">
                  Pending
                </span>
              
              <% else %>


                <% company.aprovals.each do |ca| %>
                  <% if ca == company.aprovals.last %>

                    <% if ca.name? %>
                      <span class="badge-<%= ca.name %>">
                        <a href="<%= company_aproval_path(ca.id) %>" class="btn btn-light">
                          <%= ca.name %>
                        </a>
                        
                      </span>
                    <% end %>
                    
                    
                  <% end %>
                <% end %>


              <% end %>
            </div>
            <div class="col text-align-right">
              <%= form_for @aprovals do |f| %>
                <%= f.number_field :company_id, value: company.id, type: 'hidden' %>
                <%= f.select :name , ['Approved', 'Suspended', 'Pending'], class:"select" %>
                <%= f.submit "Update", class: 'btn btn-light' %>
              <% end %>
            </div>
          </div>
          

          
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>










