<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :job_sector %>
    <%= form.select :job_sector,
      [
        'Door Supervision',
        'Close Protection',
        'Cash and Valuables in Transit',
        'Public Space Surveillance (CCTV)',
        'Security Guarding',
        'Vehicle Immobilising',
        'Key Holding'
      ], class: 'form-control' 
    %>
  </div>

  <div class="field">
    <%= form.label :hourly_rate %>
    <%= form.text_field :hourly_rate, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :payment_method %>
    <%= form.select :payment_method,
      [
        'Cash',
        'Paycheck',
        'Direct deposit'
      ], class: 'form-control' 
    %>
  </div>

  <div class="field">
    <%= form.label :payment_date %>
    <%= form.select :payment_date,
      [
        'Same Day',
        '1 Week',
        '2 Weeks',
        '3 Weeks',
        '1 Month'
      ], class: 'form-control' 
    %>
  </div>

  <div class="field">
    <%= form.label :number_of_hours %>
    <%= form.text_field :number_of_hours, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :company_id %>
    <%= form.number_field :company_id, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.number_field :category_id, class: 'form-control' %>
  </div>



  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>



  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
