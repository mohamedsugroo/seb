<div class="search_results" ng-controller="jobsController">
	<div class="container">

		<div class="row">
			<div class="col-md-3 bg-light"></div>

			<div class="col">

				<div class="jobs_list_company">
					<ul class="jobs_item">

						<li class="items" ng-repeat="job in jobsList">

				          <a href="{{ job.url }}">
				            <h4 class="job_title">
				              {{ job.title }}
				              <label class="job_status active_job_green">{{ job.status }}</label>
				            </h4>
				            <span class="job_company thin">
				              {{ job.title }}
				            </span> | 
				            <span class="job_location thin">London</span> | 
				            <span class="job_date thin">{{ job.created_at }}</span> <br>
				            <strong class="thin">Payment Method | </strong> 
				            <span class="job_hourly_rate thin"> Â£ {{ job.hourly_rate }} an hour </span> | 
				            <span class="payment_method thin">
				              {{job.payment_method}}
				            </span>  |
				            <span class="payment_date thin">
				              {{ job.payment_date }}
				            </span>   
				            <!-- <hr> -->
				            <p class="job_sumary">
				              {{job.summary}}
				            </p>
				          </a>

				        </li>
				    </ul>
				</div>

			</div>
		</div>

	</div>

</div>